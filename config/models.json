{
    "users": {
        "name": {
            "required": true,
            "type": "string",
            "unique": true,
            "minLength": 3,
            "maxLength": 26
        },
        "password": {
            "required": true,
            "type": "string",
            "minLength": 8,
            "maxLength": 32,
            "secure": "hash"
        },
        "picture": {
            "required": true,
            "type": "string",
            "defaultValue": "/images/avatar.png"
        },
        "lastLoginDate": {
            "type": "number"
        }
    },
    "messages": {
        "from": {
            "required": true,
            "type": "object"
        },
        "to": {
            "required": true,
            "type": "object"
        },
        "body": {
            "required": true,
            "type": "string",
            "minLength": 5
        },
        "savedDate": {
            "required": true,
            "type": "number",
            "defaultValue": "new Date().valueOf()",
            "evalDefaultValue": true
        },
        "deliveredDate": {
            "type": "number"
        }
    },
    "authenticated": {
        "name": {
            "required": true,
            "type": "string"
        },
        "lastActionDate": {
            "type": "number",
            "defaultValue": "new Date().valueOf()",
            "evalDefaultValue": true
        }
    },
    "channels": {
        "name": {
            "required": true,
            "type": "string"
        },
        "public": {
            "required": true,
            "type": "boolean",
            "defaultValue": true
        }
    }
}
